---
import { Image } from "astro:assets";
const { src, alt, width, height, className } = Astro.props;
---

<div class=`card ${className}`>
  <Image src={src} alt={alt} width={width} height={height} class="image" />
  <slot />
</div>

<style>
  .card {
    display: grid;
    aspect-ratio: 5 / 6;
    position: relative;
  }
  .card-position1 {
    grid-column: 5 / span 3;
    margin-bottom: 3rem;
  }
  .image {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 3rem;
  }
</style>
