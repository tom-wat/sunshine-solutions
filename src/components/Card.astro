---
import { Image } from "astro:assets";
const { src, alt, width, height, className } = Astro.props;
---

<div class=`card ${className}`>
  <Image src={src} alt={alt} width={width} height={height} class="image" />
  <slot />
</div>

<style>
  .card {
    display: grid;
    aspect-ratio: 3 / 4;
    position: relative;
    align-content: end;
    @media (min-width: 768px) {
      aspect-ratio: 3 / 4;
    }
    @media (min-width: 1024px) {
      aspect-ratio: 5 / 6;
    }
  }
  .card-position1 {
    grid-column: 1 / span 8;
    margin-bottom: 3rem;
    @media (min-width: 768px) {
      grid-column: 5 / span 4;
    }
    @media (min-width: 1024px) {
      grid-column: 5 / span 3;
    }
  }
  .image {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: var(--clamp);
    --clamp-viewport-min: 320;
    --clamp-viewport-max: 767;
    --clamp-min: 24;
    --clamp-max: 32;
    @media (min-width: 768px) {
      --clamp-viewport-min: 768;
      --clamp-viewport-max: 1024;
      --clamp-min: 16;
      --clamp-max: 20;
    }
    @media (min-width: 1024px) {
      --clamp-viewport-min: 768;
      --clamp-viewport-max: 1024;
      --clamp-min: 20;
      --clamp-max: 40;
    }
  }
</style>
