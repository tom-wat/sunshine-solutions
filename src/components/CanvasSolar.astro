<canvas id="solarSystem" width="1100" height="1100"></canvas>

<script>
  const canvas = document.getElementById("solarSystem") as HTMLCanvasElement;
  const ctx = canvas.getContext("2d");
  const parent = canvas.parentElement;

  function debounce(func, wait) {
    let timeout;
    return function executedFunction(...args) {
      const later = () => {
        clearTimeout(timeout);
        func(...args);
      };
      clearTimeout(timeout);
      timeout = setTimeout(later, wait);
    };
  }

  function resizeCanvas() {
    canvas.width = parent.clientWidth;
    canvas.height = parent.clientHeight;
  }

  resizeCanvas();
  const debouncedResize = debounce(resizeCanvas, 250);
  window.addEventListener("resize", debouncedResize);

  class Planet {
    radius: number;
    distance: number;
    speed: number;
    angle: number;
    color: string;

    constructor(radius, distance, speed, color) {
      this.radius = radius;
      this.distance = distance;
      this.speed = speed;
      this.angle = Math.random() * Math.PI * 2; // ランダムな初期位置
      this.color = color;
    }

    update() {
      this.angle += this.speed;
      const x = Math.cos(this.angle) * this.distance + canvas.width / 2;
      const y = Math.sin(this.angle) * this.distance + canvas.height / 2;

      ctx.beginPath();
      ctx.arc(x, y, this.radius, 0, Math.PI * 2);
      ctx.fillStyle = this.color;
      ctx.fill();
    }

    drawOrbit() {
      ctx.beginPath();
      ctx.arc(
        canvas.width / 2,
        canvas.height / 2,
        this.distance,
        0,
        Math.PI * 2
      );
      ctx.strokeStyle = "hsl(45 100% 70% / 0.3)";
      ctx.lineWidth = 1;
      ctx.stroke();
    }
  }

  const sun = new Planet(15, 0, 0, "hsl(350 100% 50% / 0.8)");
  const planets = [
    new Planet(2, 60, 0.0188, "hsl(45 0% 80%)"),
    new Planet(4, 90, 0.014, "hsl(35 100% 50%)"),
    new Planet(4, 120, 0.0116, "hsl(196 100% 50%)"),
    new Planet(3, 160, 0.0096, "hsl(25 100% 50%)"),
    new Planet(10, 220, 0.0052, "hsl(47 100% 62%)"),
    new Planet(9, 280, 0.0036, "hsl(35 100% 80%)"),
    new Planet(7, 340, 0.0024, "hsl(150 100% 70%)"),
    new Planet(7, 400, 0.002, "hsl(170 100% 50%)"),
  ];

  function animate() {
    ctx.clearRect(0, 0, canvas.width, canvas.height);

    // 軌道を描画
    planets.forEach((planet) => planet.drawOrbit());

    sun.update();
    planets.forEach((planet) => planet.update());

    requestAnimationFrame(animate);
  }

  animate();
</script>
