---
import { Image } from "astro:assets";
import myImage from "../assets/jean-guy-nakars-nsMSEUHuOEU-unsplash.avif";
import Header from "./Header.astro";
---

<div id="hero" class="container">
  <Header />
  <h2>
    <p>
      Constant.<br />
      Illuminating.<br />
      Eternal.
    </p>
  </h2>
  <Image src={myImage} alt="雄大な朝日の風景" class="hero" />
</div>

<style>
  .container {
    container-type: inline-size;
    min-height: 100svh;
    position: relative;
    background-color: black;
  }
  .hero {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100svh;
    object-fit: cover;
    z-index: -1;
  }
  h2 {
    position: absolute;
    bottom: 15svh;
    left: 12vw;
  }
  p {
    --clamp-viewport-min: 320;
    --clamp-viewport-max: 767;
    --clamp-min: 45;
    --clamp-max: 63;
    color: var(--color-white);
    font-size: var(--clamp);
    line-height: 1;
    font-family: "cormorant garamond", serif;
    font-weight: 500;
    filter: drop-shadow(0 0 1rem var(--color-shadow));
    @media (min-width: 768px) {
      --clamp-viewport-min: 768;
      --clamp-viewport-max: 1024;
      --clamp-min: 93;
      --clamp-max: 127;
    }
    @media (min-width: 1024px) {
      --clamp-viewport-min: 1280;
      --clamp-viewport-max: 2560;
      --clamp-min: 90;
      --clamp-max: 180;
    }
  }
</style>
