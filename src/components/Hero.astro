---
import Header from "./Header.astro";
---

<section id="hero" class="container">
  <Header />
  <h2>
    <p>Constant.&NewLine; Illuminating.&NewLine; Eternal.</p>
  </h2>
  <picture class="hero">
    <source
      media="(min-width: 1025px)"
      srcset="/images/hero-4k.avif 3840w,/images/hero-3k.avif 2880w,/images/hero-2k.avif 1920w"
      sizes="100vw"
      type="image/avif"
    />
    <source
      media="(min-width: 768px)"
      srcset="/images/hero-tab.avif"
      type="image/avif"
    />
    <source
      media="(max-width: 767px)"
      srcset="/images/hero-sp.avif"
      type="image/avif"
    />
    <img
      src="/images/hero.jpg"
      alt="朝日が登る風景"
      width="3840"
      height="2160"
    />
  </picture>
</section>

<style>
  .container {
    container-type: inline-size;
    min-height: 100svh;
    position: relative;
    background-color: black;
  }
  .hero {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100svh;
    z-index: -1;
  }
  .hero img {
    width: 100%;
    height: 100svh;
    object-fit: cover;
  }
  h2 {
    position: absolute;
    bottom: 15svh;
    left: 12vw;
  }
  p {
    --clamp-min: 45;
    --clamp-max: 63;
    color: var(--color-white);
    font-size: var(--clamp);
    line-height: 1;
    font-family: "cormorant garamond", serif;
    font-weight: 500;
    white-space: pre-line;
    filter: drop-shadow(0 0 1rem var(--color-shadow));
    @media (min-width: 768px) and (orientation: portrait) {
      --clamp-min: 93;
      --clamp-max: 127;
    }
    @media (min-width: 768px) and (orientation: landscape) {
      --clamp-min: 50;
      --clamp-max: 80;
    }
    @media (min-width: 1025px) {
      --clamp-min: 90;
      --clamp-max: 180;
    }
  }
</style>
