---
import MainHeader from "../components/MainHeader.astro";
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import myImage from "../assets/jean-guy-nakars-nsMSEUHuOEU-unsplash.jpg";
---

<Layout title="Welcome to World." description="A imaginative site">
  <MainHeader />
  <main class="main">
    <h2>
      <p>
        Constant.<br />
        Illuminating.<br />
        Eternal.
      </p>
    </h2>
    <Image src={myImage} alt="雄大な朝日の景色" class="hero" />
  </main>
</Layout>

<style>
  .main {
    container-type: inline-size;
    min-height: 100svh;
    position: relative;
  }
  .hero {
    position: absolute;
    width: 100%;
    height: 100svh;
    object-fit: cover;
  }
  h2 {
    position: absolute;
    bottom: 15svh;
    left: 15vw;
    z-index: 10;
    color: aliceblue;
  }
  p {
    font-size: 6.75rem;
    line-height: 6.75rem;
    font-family: "CormorantGaramond-Medium";
    filter: drop-shadow(0 0 1rem hsl(29 81% 50%));
  }
  .headline {
    font-size: 2rem;
    font-weight: 600;
    @container (min-width: 600px) {
      color: orange;
    }
  }
</style>
